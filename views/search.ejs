<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/styles.css">
  <title>Search Results</title>
</head>
<body class="bg-dark text-light">
  <%- include('partials/header') %>
  <main class="container my-4">
    <h1 class="text-center mb-4">Results for "<%= searchTerm %>"</h1>
    <div class="row">
      <% results.forEach(movie => { %>
        <div class="col-md-4 mb-4">
          <div class="card bg-secondary text-light h-100 shadow-lg">
            <img src="<%= movie.Poster %>" class="card-img-top" alt="<%= movie.Title %>">
            <div class="card-body">
              <h5 class="card-title"><%= movie.Title %></h5>
              <p class="card-text">Year: <%= movie.Year %></p>
              <a href="#" class="btn btn-primary">Saber Mais</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
    

    <nav class="d-flex justify-content-center align-items-center mt-4">
      <% if (currentPage > 1) { %>
        <a class="btn btn-outline-primary me-2" href="/search?q=<%= searchTerm %>&page=1">1</a>
        <a class="btn btn-outline-primary me-2" href="/search?q=<%= searchTerm %>&page=<%= currentPage - 1 %>">Anterior</a>
      <% } %>

      <form action="/search" method="get" class="d-flex align-items-center">
        <input type="hidden" name="q" value="<%= searchTerm %>">
        <label for="pageInput" class="me-2">Página</label>
        <input id="pageInput" type="number" name="page" value="<%= currentPage %>" min="1" max="<%= totalPages %>" class="form-control text-center me-2" style="width: 80px;">
        <button type="submit" class="btn btn-primary">Ir</button>
      </form>

      <% if (currentPage < totalPages) { %>
        <a class="btn btn-outline-primary ms-2" href="/search?q=<%= searchTerm %>&page=<%= currentPage + 1 %>">Próxima</a>
        <a class="btn btn-outline-primary ms-2" href="/search?q=<%= searchTerm %>&page=<%= totalPages %>"><%= totalPages %></a>
      <% } %>
    </nav>
  </main>
  <%- include('partials/footer') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
